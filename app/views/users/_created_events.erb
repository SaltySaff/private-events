<div class="column is-half ">
  <% if current_user && @user.username == current_user.username %>
    <h2 class="title is-3">Your Upcoming Events</h2>
  <% else %>
    <h2 class="title is-3"><%= @user.username %>'s Upcoming Events</h2>
  <% end %>
  <% @user.created_events.future.each do |event| %>
    <div class="box">
      <%= link_to event_path(event.id) do %>
          <strong><%= event.title %></strong><br>
      <% end %>
      <small><strong>When:</strong> <%= event.date %></small><br>
      <%= event.body %><br><br>
      <%= link_to "Cancel Event", event, method: :delete, class: "button is-danger", data: { confirm: "Are you sure you want to delete this event?" } %>
    </div>
  <% end %>
</div>


