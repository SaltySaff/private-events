<%= simple_form_for(@event) do |form| %>
<%= form.error_notification %>
<div class="field">
  <div class="control">
    <%= form.input :title, label: 'Title', input_html: { class: "input" }, wrapper: false,
    label_html: { class: "label" } %>
  </div>
</div>
 <div class="field">
  <div class="control">
    <%= form.input :body, label: 'Event Description', input_html: { class: "textarea" }, wrapper: false,
    label_html: { class: "label" } %>
  </div>
 </div>
 <div class="field">
  <div class="control">
    <%= form.input :date, label: 'Date', wrapper: false,
    label_html: { class: "label" } %>
  </div>
 </div>

 <%= form.button :submit, class: "button is-dark" %>
<% end %>
